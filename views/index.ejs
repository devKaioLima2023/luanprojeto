<%- include("partials/header.ejs") %>
<section id="container-games">
    <% games.forEach(game =>{%>
        <div class="card-game">
            <img src="/img/<%=game.imagem%>" alt="Foto capa do jogo <%=game.nome%>" />
            <h2 class="titulo"><%=game.nome%></h2>
            <button style="background-color: green; padding: 4px; color: white; border: none;"><a style="text-decoration: none; color: #fff; font-size: 20px;" href="/gametorrent/<%=game.nome%>">Download</a></button>
          </div>
        <%}) %>
</section>
